@page
@model LibraryAccounting.Pages.ClientPages.BookedBooksModel
@{
    ViewData["ClientPages/BookedBooks"] = "disabled";
}
<div class="container mt-3">
    <ul class="list-group">
        @foreach (var book in Model.ArmoredBooks)
        {
            <li class="list-group-item mb-2">
                <p>@book.Title</p>
                @if (book.Booking.IsTransmitted)
                {
                    <p>Статус: забронировано, выдано</p>
                }
                else
                {
                    <p>Статус: забронировано, не выдано</p>
                    <form method="post">
                        <input type="hidden" name="idBooking" value="@book.Booking.Id" />
                        <button type="submit" class="btn btn-dark booking-btn">Отменить бронировку</button>
                    </form>
                }
                <p>Дата бронировки: @book.Booking.BookingDate</p>
            </li>
        }
    </ul>
</div>